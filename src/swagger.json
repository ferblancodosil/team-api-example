{
  "swagger": "2.0",
  "info": {
    "description": "API de ejemplo con Express",
    "version": "1.0.0",
    "title": "API de Ping y Jugadores"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Players",
      "description": "Operations related to players"
    },
    {
      "name": "Clubs",
      "description": "Operations related to clubs"
    },
    {
      "name": "Ping",
      "description": "Operations related to ping"
    }
  ],
  "paths": {
    "/ping": {
      "get": {
        "summary": "Devuelve un mensaje de pong",
        "tags": ["Ping"],
        "responses": {
          "200": {
            "description": "Respuesta exitosa",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/players": {
      "post": {
        "summary": "Registrar un nuevo jugador",
        "description": "Crea un nuevo jugador sin pertenecer a un club.",
        "tags": ["Players"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "birthYear": {
                  "type": "integer"
                },
                "salary": {
                  "type": "number"
                },
                "clubId": {
                  "type": "integer"
                }
              },
              "required": ["firstName", "lastName", "birthYear", "salary"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Jugador creado exitosamente",
            "schema": {
              "$ref": "#/definitions/Player"
            }
          },
          "400": {
            "description": "Error de validación"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/clubs": {
      "post": {
        "summary": "Registrar un nuevo club",
        "description": "Crea un nuevo club con un presupuesto.",
        "tags": ["Clubs"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "budget": {
                  "type": "number"
                }
              },
              "required": ["name", "city", "budget"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Club creado exitosamente",
            "schema": {
              "$ref": "#/definitions/Club"
            }
          },
          "400": {
            "description": "Error de validación"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "definitions": {
    "Player": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "birthYear": {
          "type": "integer"
        },
        "salary": {
          "type": "number"
        },
        "clubId": {
          "type": "integer"
        }
      }
    },
    "Club": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "budget": {
          "type": "number"
        }
      }
    }
  }
}